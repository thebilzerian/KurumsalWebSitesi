
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmet Ekle</h2>


<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hizmet/Create/" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control " id="Aciklama" type="text" name="Aciklama" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="resimURL" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input required type="url" class="form-control " id="resimURL" name="ResimURL" placeholder="Resim URL"  />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-default" type="submit"><a href="/Hizmet/Index/">İptal</a></button>
            </div>
        </div>
    </form>
</div>

