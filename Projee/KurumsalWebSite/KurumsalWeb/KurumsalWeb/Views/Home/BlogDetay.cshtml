@model KurumsalWeb.Models.Model.Blog
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">

                <article>
                    <div class="post-image">
                        <div class="post-heading">
                            <h3>@Model.Baslik</h3>
                        </div>
                        <div class="bottom-article">
                            <ul class="meta-post">
                                <li><i class="icon-folder-open"></i><a href="#"> @Model.Kategori.KategoriAd</a></li>
                                @*<li><i class="icon-comments"></i><a href="#">4 Comments</a></li>*@
                            </ul>
                            <br />
                            <img src="@Model.ResimURL" alt="@Model.Baslik" />
                        </div>
                        <p>
                            @Html.Raw(Model.Icerik)
                        </p>

                    </div>
                </article>
                <div class="row">
                    <div class="col-lg-8">
                        <h3>Yorum Yap</h3>
                        <form>
                            <div>
                                <input type="text" id="adsoyad" placeholder="Adınız Soyadınız" class="form-control" required />
                                <br />
                                <input type="email" id="eposta" placeholder="Mail Adresiniz" class="form-control" required />
                                <br />
                                <textarea typeof="text" id="icerik" class="form-control"></textarea>
                                <br />
                                <button type="submit" class="btn btn-success" id="gonder" value="Yorum Yap">Yorum Yap</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="row">
                    <div>
                        <h3>Blog Makale Yorumları</h3>
                        @foreach (var item in Model.Yorums.OrderByDescending(x => x.YorumId).Where(x => x.Onay == true))
                        {
                            <p>@item.AdSoyad - @item.Eposta</p>
                            <p>@item.Icerik</p>
                            <hr />
                        }
                    </div>
                </div>

            </div>
            <div class="col-lg-4">
                <aside class="right-sidebar">
                    <div class="widget">
                        <form class="form-search">
                            <input class="form-control" type="text" placeholder="Search..">
                        </form>
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        @{
                            Html.RenderAction("BlogKategoriPartial", "Home");
                        }
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Son Blog Kayıtları</h5>
                        <ul class="recent">
                            @{
                                Html.RenderAction("BlogKayitPartial", "Home");
                            }
                        </ul>
                    </div>

                </aside>
            </div>
        </div>
    </div>
</section>
<script src="~/Content/SiteLayout/js/jquery.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#gonder").click(function () {
            var adisoyadi = $("#adsoyad").val();
            var epostasi = $("#eposta").val();
            var yorumunuz = $("#icerik").val();
            $.ajax({
                url: '/Home/YorumYap',
                data: { adsoyad: adisoyadi, eposta: epostasi, icerik: yorumunuz, blogid: @Model.BlogId },
                type: 'POST',
                dataType: 'json',
                success: function (data) {
                    alert("Yorumunuz eklendi, kontrol edildikten sonra yayınlanacaktır.");
                },
                error: function (xhr, status, error) {
                    console.log("Bir hata oluştu: " + error);
                }
            });
        });
    });
</script>

